<% if obj.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(obj.errors.count, "error") %>.
    </div>
    <ul>
    <% obj.errors.full_messages.each do |msg| %>
      <li class="error_message"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %> 